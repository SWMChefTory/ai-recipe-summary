[
  {
    "toolSpec": {
      "name": "emit_video_meta",
      "description": "Extract recipe metadata (title, description, ingredients, tags, servings, cook_time) from video.",
      "inputSchema": {
        "json": {
          "type": "object",
          "properties": {
            "title": {
              "type": "string",
              "description": "A catchy video title including the dish name."
            },
            "description": {
              "type": "string",
              "description": "Rich description of the dish including flavor and texture (max 150 chars)."
            },
            "ingredients": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "name": { "type": "string" },
                  "amount": { "type": "number" },
                  "unit": { "type": "string" }
                },
                "required": ["name"]
              }
            },
            "tags": {
              "type": "array",
              "items": { "type": "string" },
              "description": "2-4 tags categorizing the dish."
            },
            "servings": {
              "type": "integer",
              "description": "Number of servings."
            },
            "cook_time": {
              "type": "integer",
              "description": "Total cooking time in minutes."
            }
          },
          "required": ["title", "description", "ingredients", "tags", "servings", "cook_time"]
        }
      }
    }
  }
]

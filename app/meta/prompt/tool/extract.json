[
  {
    "toolSpec": {
      "name": "emit_meta",
      "description": "Emit structured recipe metadata extracted from captions (Korean).",
      "inputSchema": {
        "json": {
          "type": "object",
          "required": [
            "description",
            "ingredients",
            "tags",
            "servings",
            "cook_time"
          ],
          "properties": {
            "description": {
              "type": "string",
              "maxLength": 60,
              "description": "레시피의 핵심 특징을 담은 한국어 한 문장 (60자 이내)"
            },
            "ingredients": {
              "type": "array",
              "items": {
                "type": "object",
                "required": ["name", "amount", "unit"],
                "properties": {
                  "name": { "type": "string" },
                  "amount": { "type": "number" },
                  "unit": { "type": "string" }
                }
              }
            },
            "tags": {
              "type": "array",
              "minItems": 2,
              "maxItems": 4,
              "items": { "type": "string" }
            },
            "servings": { "type": "integer", "minimum": 1 },
            "cook_time": { "type": "integer", "minimum": 0 }
          }
        }
      }
    }
  }
]

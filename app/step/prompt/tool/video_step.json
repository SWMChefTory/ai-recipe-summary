[
  {
    "toolSpec": {
      "name": "emit_recipe_steps",
      "description": "Extract cooking actions into grouped steps JSON, strictly chronological.",
      "inputSchema": {
        "json": {
          "type": "object",
          "properties": {
            "steps": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "subtitle": {
                    "type": "string"
                  },
                  "start": {
                    "type": "string",
                    "description": "Start timestamp as hh:mm:ss (e.g., 00:09:43).",
                    "pattern": "^\\d{2}:[0-5]\\d:[0-5]\\d$"
                  },
                  "descriptions": {
                    "type": "array",
                    "items": {
                      "type": "object",
                      "properties": {
                        "text": {
                          "type": "string"
                        },
                        "start": {
                          "type": "string",
                          "description": "Start timestamp as hh:mm:ss (e.g., 00:09:43).",
                          "pattern": "^\\d{2}:[0-5]\\d:[0-5]\\d$"
                        }
                      },
                      "required": [
                        "text",
                        "start"
                      ]
                    }
                  }
                },
                "required": [
                  "subtitle",
                  "start",
                  "descriptions"
                ]
              }
            }
          },
          "required": [
            "steps"
          ]
        }
      }
    }
  }
]

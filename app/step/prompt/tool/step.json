[
  {
    "toolSpec": {
      "name": "emit_steps",
      "description": "Emit step groups extracted/merged from captions",
      "inputSchema": {
        "json": {
          "type": "object",
          "required": ["steps"],
          "properties": {
            "steps": {
              "type": "array",
              "items": {
                "type": "object",
                "required": ["subtitle", "start", "descriptions"],
                "properties": {
                  "subtitle": { "type": "string" },
                  "start": { "type": "number" },
                  "descriptions": {
                    "type": "array",
                    "items": {
                      "type": "object",
                      "required": ["text", "start"],
                      "properties": {
                        "text": { "type": "string", "maxLength": 90 },
                        "start": { "type": "number" }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
]
